<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Lecturer</title>
  </head>
  <body>
    <!-- Home Link -->
    <a href="/">Home</a>
    <h1>Add Lecturer</h1>
    <!-- Display Validation Errors -->
    <% if (errors.length > 0) { %>
    <ul>
      <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
      <% }) %>
    </ul>
    <% } %>
    <!-- Add Lecturer Form -->
    <form action="/lecturers/add" method="POST">
      <!-- Lecturer ID -->
      <label for="_id">Lecturer ID:</label>
      <input
        type="text"
        id="_id"
        name="_id"
        value="<%= lecturer._id || '' %>"
        required
      /><br />
      <!-- Name -->
      <label for="name">Name:</label>
      <input
        type="text"
        id="name"
        name="name"
        value="<%= lecturer.name || '' %>"
        required
      /><br />
      <!-- Department ID -->
      <label for="did">Department ID:</label>
      <input
        type="text"
        id="did"
        name="did"
        value="<%= lecturer.did || '' %>"
        required
      /><br />
      <!-- Submit Button -->
      <button type="submit">Add</button>
    </form>
  </body>
</html>
